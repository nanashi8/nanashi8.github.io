{
  "version_strategy": "semantic",
  "branch_prefix": "v",
  "branch_format": "{version}_{type}/{description}",
  "auto_build_test": true,
  "auto_generate_docs": true,
  "auto_update_changelog": true,
  "auto_update_structure_map": true,
  "commit_message_template": "feat: {description}\n\n{details}",
  "version_thresholds": {
    "major": 1000,
    "minor": 100,
    "patch": 1
  },
  "trigger_phrases": [
    "バージョン管理してください",
    "バージョン管理して",
    "バージョニングしてください",
    "新しいバージョンを作成",
    "リリース準備",
    "ブランチを切って"
  ],
  "change_types": {
    "feature": "feature",
    "bugfix": "bugfix",
    "refactor": "refactor",
    "docs": "docs",
    "test": "test"
  },
  "document_templates": {
    "version_doc": ".copilot/versions/v{version}-{description}.md",
    "changelog": ".copilot/changelog.md",
    "structure_map": ".copilot/structure-map.md"
  },
  "build_commands": {
    "ios": "xcodebuild -project SimpleWord.xcodeproj -scheme SimpleWord -destination 'platform=iOS Simulator,name=iPhone 17' build"
  }
}
