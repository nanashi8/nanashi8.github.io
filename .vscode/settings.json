{
  "github.copilot.chat.codeGeneration.instructions": [
    {
      "file": "docs/PASSAGE_CREATION_GUIDELINES.md"
    }
  ],
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "stylelint.enable": true,
  "stylelint.validate": ["css", "scss", "less"],
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": "explicit"
  },
  "css.lint.compatibleVendorPrefixes": "ignore",
  "css.lint.vendorPrefix": "ignore",
  "css.lint.unknownProperties": "ignore",
  "css.lint.unknownAtRules": "ignore",
  "eslint.options": {
    "ignorePattern": [
      "scripts/**/*.ts"
    ]
  },
  "eslint.rules.customizations": [
    { "rule": "@typescript-eslint/ban-ts-comment", "severity": "off" }
  ],
  "typescript.tsdk": "node_modules/typescript/lib",
  "[yaml]": {
    "editor.codeLens": false
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "on"
    }
  },
  "markdown.validate.enabled": true,
  "markdown.validate.fileLinks.enabled": "error",
  "markdown.validate.referenceLinks.enabled": "warning",
  "markdown.validate.fragmentLinks.enabled": "warning",
  "markdown.validate.ignoredLinks": [
    "http://localhost:**",
    "https://nanashi8.github.io/**"
  ],
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/coverage/**": true
  },
  "yaml.customTags": [
    "!reference sequence"
  ],
  "yaml.validate": false
}
