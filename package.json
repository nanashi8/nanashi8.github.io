{
  "name": "quiz-app",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "build:beta": "vite build --base=/beta/ --outDir dist-beta",
    "deploy:beta": "npm run build:beta && gh-pages -d dist-beta -a --dest beta -m 'Deploy beta preview'",
    "preview:beta": "npm run build:beta && vite preview --outDir dist-beta --port 4174",
    "validate": "python3 scripts/validate_all_data.py",
    "validate:grammar": "python3 scripts/validate_grammar_advanced.py",
    "validate:grammar:analyze": "python3 scripts/analyze_grammar_data_quality.py",
    "check:data-quality": "bash scripts/check-data-quality.sh",
    "check:grammar-quality": "npm run validate:grammar && npm run validate:grammar:analyze",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint:css:fix": "stylelint 'src/**/*.css' --fix",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:errors-only": "eslint . --ext ts,tsx --report-unused-disable-directives --quiet",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore dist --ignore dist-beta",
    "quality:check": "npm run typecheck && npm run lint:errors-only && npm run lint:css && npm run lint:md",
    "quality:strict": "npm run typecheck && npm run lint && npm run lint:css && npm run lint:md",
    "quality:grammar": "npm run check:grammar-quality",
    "test:ci": "npm run quality:check && npm run build",
    "test:smoke": "bash scripts/test-runner.sh smoke-fast",
    "test:smoke:full": "bash scripts/test-runner.sh smoke",
    "test:all": "bash scripts/test-runner.sh all",
    "test:smart": "bash scripts/smart-test.sh",
    "test:smoke:ui": "playwright test --project=chromium --ui",
    "test:smoke:debug": "playwright test --project=chromium --debug",
    "test:smoke:update": "playwright test --project=chromium --update-snapshots",
    "test:visual": "playwright test tests/visual-comparison.spec.ts --project=chromium",
    "health-check": "bash scripts/health-check.sh",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json,md}\" \"tests/**/*.{ts,tsx}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json,md}\" \"tests/**/*.{ts,tsx}\" \"*.{json,md}\"",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:unit:watch": "vitest --watch",
    "size": "size-limit",
    "size:why": "size-limit --why",
    "lighthouse": "lhci autorun",
    "prepare": "husky"
  },
  "size-limit": [
    {
      "name": "Main Bundle",
      "path": "dist/assets/index-*.js",
      "limit": "500 KB"
    },
    {
      "name": "React Vendor",
      "path": "dist/assets/react-vendor-*.js",
      "limit": "200 KB"
    },
    {
      "name": "CSS Bundle",
      "path": "dist/assets/index-*.css",
      "limit": "100 KB"
    }
  ],
  "dependencies": {
    "@sentry/react": "^7.120.4",
    "chart.js": "^4.5.1",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.1",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.57.0",
    "@size-limit/file": "^12.0.0",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.46.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "size-limit": "^12.0.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^5.0.8",
    "vitest": "^4.0.15"
  }
}
