{
  "name": "quiz-app",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "build:beta": "vite build --base=/beta/ --outDir dist-beta",
    "deploy:beta": "npm run build:beta && gh-pages -d dist-beta -a --dest beta -m 'Deploy beta preview'",
    "preview:beta": "npm run build:beta && vite preview --outDir dist-beta --port 4174",
    "validate": "python3 scripts/validate_all_data.py",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint:css:fix": "stylelint 'src/**/*.css' --fix",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test:ci": "npm run typecheck && npm run build",
    "test:smoke": "playwright test tests/smoke-fast.spec.ts --project=chromium",
    "test:smoke:full": "playwright test tests/smoke.spec.ts --project=chromium",
    "test:smart": "bash scripts/smart-test.sh",
    "test:smoke:ui": "playwright test --project=chromium --ui",
    "test:smoke:debug": "playwright test --project=chromium --debug",
    "test:smoke:update": "playwright test --project=chromium --update-snapshots",
    "test:visual": "playwright test tests/visual-comparison.spec.ts --project=chromium",
    "prepare": "husky"
  },
  "dependencies": {
    "@sentry/react": "^7.120.4",
    "chart.js": "^4.5.1",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/forms": "^0.5.10",
    "@types/node": "^24.10.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^5.0.8"
  }
}
