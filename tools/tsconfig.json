{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"],
      "@/utils/*": ["src/utils/*"]
    }
  },
  "include": ["./**/*.ts", "../src/**/*.ts"],
  "exclude": ["../node_modules"]
}
